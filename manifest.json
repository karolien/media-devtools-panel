{
	"name": "Media Panel",
	"short_name": "Media",
	"version": "1.0",
	"minimum_chrome_version": "10.0",
	"devtools_page": "devtools.html",
	"description": "Devtools panel that displays information about media",
	"background": {
		"scripts": [ "background.js" ]
	},
	"permissions": [
		"tabs",
		"<all_urls>",
		"activeTab",
		"debugger"
	],
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": [ "content-script.js" ],
		"run_at": "document_start",
		"all_frames": true
	} ],
	"browser_action": {
		"default_icon": {
		},
		"default_title": "Media"
	},
	"manifest_version": 2
}
